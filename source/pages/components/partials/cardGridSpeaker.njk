<div class="header">
    <h1 class="header__title">Speakers</h1>
    <img class="header__img" src="assets/graphics/TAW-Vis-Dev-6-Edit.jpg" alt="header graphic">
</div>

{% for speaker in speakers %}
	<div class="speakers-card--grid">
		<div class="speakers-card__fields">{{speaker.fields}}</div>
		<img src="{{speaker.headshot}}" class="speakers-card__headshot">

		<div class="card">
			<span class="card__header speakers-card__name">{{speaker.firstName}}
				{{lastName}}</span>
			<span class="card__subhead speakers-card__position">{{speaker.position}}</span>
			<div class="speakers-card__backing-img">
				<img src="{{speaker.backingImg}}">
			</div>
		</div>
	</div>
{% endfor %}
